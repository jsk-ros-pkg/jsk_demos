<launch>
  <group ns="valve_detection">
    <node pkg="rviz" type="rviz" name="rviz_input"
          launch-prefix="glc-capture -i --disable-audio"
          args="-d $(find drc_task_common)/config/valve/input.rviz"/>
    <node pkg="rviz" type="rviz" name="rviz_recog"  if="false"
          launch-prefix="glc-capture -i --disable-audio"
          args="-d $(find drc_task_common)/config/valve/recog.rviz"/>
    <node pkg="rviz" type="rviz" name="rviz_result"
          launch-prefix="glc-capture -i --disable-audio"
          args="-d $(find drc_task_common)/config/valve/result.rviz"/>
    <node pkg="rviz" type="rviz" name="rviz_downsample"  if="false"
          launch-prefix="glc-capture -i --disable-audio"
          args="-d $(find drc_task_common)/config/valve/downsample.rviz"/>
  </group>
</launch>
