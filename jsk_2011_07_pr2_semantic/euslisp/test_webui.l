(init-settings)
(ros::advertise-service "/ipad/service/knowrob" roseus::StringString #'str-srv)
(ros::subscribe "/ipad/event/select" jsk_pr2_gui::iPadSelect #'str-cb)

(ros::rate 10)
(do-until-key
 (ros::sleep)
 (ros::spin-once))

